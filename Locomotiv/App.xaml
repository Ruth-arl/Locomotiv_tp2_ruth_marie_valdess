<Application x:Class="Locomotiv.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:Locomotiv.ViewModel"
             xmlns:view="clr-namespace:Locomotiv.View"
             xmlns:converters="clr-namespace:Locomotiv.Utils.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <DataTemplate DataType="{x:Type viewModel:ConnectUserViewModel}">
                <view:ConnectView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:StationViewModel}">
                <view:StationView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
