<UserControl x:Class="Locomotiv.View.AdminHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Locomotiv.View"
             xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <gmaps:GMapControl x:Name="MapControl"
                           Grid.Column="0"
                           Zoom="12"
                           MinZoom="3"
                           MaxZoom="18"
                           Bearing="0"
                           MouseWheelZoomType="MousePositionAndCenter"
                           CanDragMap="True" />

        <Border Grid.Column="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1,0,0,0"
                Width="350">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Détails de la station"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Cliquez sur une station de la carte pour voir ses détails"
                                   TextWrapping="Wrap"
                                   FontStyle="Italic"
                                   Foreground="#999"
                                   HorizontalAlignment="Center"
                                   Margin="0,50,0,0"
                                   Visibility="{Binding IsStationSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                        <StackPanel Visibility="{Binding IsStationSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding SelectedStation.Nom}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SelectedStation.Ville}"
                                       FontSize="14"
                                       Foreground="#666"
                                       Margin="0,0,0,15"/>

                            <Border Style="{StaticResource InfoCardStyle}"
                                    Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Capacité" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SelectedStation.Trains.Count}" FontSize="18" FontWeight="Bold" Foreground="#4CAF50"/>
                                        <TextBlock Text=" / " FontSize="18" Margin="3,0"/>
                                        <TextBlock Text="{Binding SelectedStation.CapaciteMax}" FontSize="18" FontWeight="Bold"/>
                                        <TextBlock Text=" trains" FontSize="12" VerticalAlignment="Bottom" Margin="5,0,0,2"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Trains en gare"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding SelectedStation.Trains}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InfoCardStyle}"
                                                Padding="10"
                                                Margin="0,0,0,8">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Type}" FontWeight="SemiBold" FontSize="13"/>
                                                <TextBlock Text="{Binding Etat}" Foreground="#666" FontSize="12" Margin="0,2,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock Text="Départ: " FontSize="11" Foreground="#666"/>
                                                    <TextBlock Text="{Binding HeureDepart, StringFormat='dd/MM/yyyy HH:mm'}" FontSize="11"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Aucun train en gare"
                                       FontStyle="Italic"
                                       Foreground="#999"
                                       Margin="0,10,0,0"
                                       Visibility="{Binding SelectedStation.Trains.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>

                            <Button Content="Gérer la station"
                                    Command="{Binding ManageStationCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="12"
                                    Margin="0,20,0,0"
                                    FontSize="14"/>
                        </StackPanel>

                        <Border Style="{StaticResource InfoCardStyle}"
                                Padding="15"
                                Margin="0,30,0,0">
                            <StackPanel>
                                <TextBlock Text="Planifier un itinéraire"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Train" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding AvailableTrains}"
                                          SelectedItem="{Binding SelectedTrain}"
                                          Padding="8"
                                          Margin="0,0,0,10"
                                          Background="White"
                                          BorderBrush="#E0E0E0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Train #"/>
                                                <TextBlock Text="{Binding IdTrain}"/>
                                                <TextBlock Text=" - " Margin="5,0"/>
                                                <TextBlock Text="{Binding Type}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <TextBlock Text="Départ" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Stations}"
                                          SelectedItem="{Binding DepartureStation}"
                                          DisplayMemberPath="Nom"
                                          Padding="8"
                                          Margin="0,0,0,10"
                                          Background="White"
                                          BorderBrush="#E0E0E0"/>

                                <TextBlock Text="Arrivée" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Stations}"
                                          SelectedItem="{Binding ArrivalStation}"
                                          DisplayMemberPath="Nom"
                                          Padding="8"
                                          Margin="0,0,0,15"
                                          Background="White"
                                          BorderBrush="#E0E0E0"/>

                                <Button Content="Planifier l'itinéraire"
                                        Command="{Binding PlanItineraireCommand}"
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Padding="12"
                                        FontSize="13"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoCardStyle}"
                                Padding="15"
                                Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Itinéraires en cours"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,10"/>

                                <ListBox ItemsSource="{Binding ItinerairesActifs}"
                                         SelectedItem="{Binding SelectedItineraire}"
                                         MaxHeight="200"
                                         Background="White"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"
                                         Margin="0,0,0,10">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10"
                                                    BorderBrush="#E0E0E0"
                                                    BorderThickness="0,0,0,1">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                        <TextBlock Text="Train #" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding IdTrain}" FontWeight="SemiBold" Margin="3,0"/>
                                                        <TextBlock Text="-" Margin="5,0"/>
                                                        <TextBlock Text="{Binding Train.Type}" Foreground="#666"/>
                                                    </StackPanel>

                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                        <TextBlock Text="De:" FontSize="11" Foreground="#666" Width="60"/>
                                                        <TextBlock FontSize="11" FontWeight="SemiBold">
                                                            <Run Text="{Binding Arrets[0].Station.Nom, Mode=OneWay}"/>
                                                            <Run Text=" (" Foreground="#999"/>
                                                            <Run Text="{Binding HeureDepart, StringFormat='HH:mm', Mode=OneWay}" Foreground="#999"/>
                                                            <Run Text=")" Foreground="#999"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                        <TextBlock Text="Vers:" FontSize="11" Foreground="#666" Width="60"/>
                                                        <TextBlock FontSize="11" FontWeight="SemiBold">
                                                            <Run Text="{Binding Arrets[1].Station.Nom, Mode=OneWay}"/>
                                                            <Run Text=" (" Foreground="#999"/>
                                                            <Run Text="{Binding HeureArriveeEstimee, StringFormat='HH:mm', Mode=OneWay}" Foreground="#999"/>
                                                            <Run Text=")" Foreground="#999"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                        <TextBlock Text="Blocks:" FontSize="11" Foreground="#666" Width="60"/>
                                                        <TextBlock Text="{Binding BlocksTraverses.Count}" FontSize="11" FontWeight="SemiBold" Foreground="#F57F17"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Content="✓ Terminer"
                                            Grid.Column="0"
                                            Command="{Binding TerminerItineraireCommand}"
                                            Style="{StaticResource SuccessButtonStyle}"
                                            Padding="8"
                                            FontSize="12"
                                            Margin="0,0,5,0"/>

                                    <Button Content="✕ Annuler"
                                            Grid.Column="1"
                                            Command="{Binding AnnulerItineraireCommand}"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Padding="8"
                                            FontSize="12"
                                            Margin="5,0,0,0"/>
                                </Grid>

                                <TextBlock Text="Terminer: Le train arrive à destination. Annuler: Remettre le train en gare."
                                           FontSize="10"
                                           Foreground="#666"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Column="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Légende" FontWeight="Bold" Margin="0,0,0,8"/>

                <TextBlock Text="Stations" FontSize="11" FontWeight="SemiBold" Margin="0,5,0,3" Foreground="#666"/>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Ellipse Width="14" Height="14" Fill="Red" Stroke="White" StrokeThickness="2"/>
                    <TextBlock Text="Gare" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Blocks (segments)" FontSize="11" FontWeight="SemiBold" Margin="0,8,0,3" Foreground="#666"/>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Rectangle Width="20" Height="3" Fill="Green"/>
                    <TextBlock Text="Libre" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Rectangle Width="20" Height="3" Fill="Orange"/>
                    <TextBlock Text="Attention" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Rectangle Width="20" Height="3" Fill="Red"/>
                    <TextBlock Text="Occupé" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Autres" FontSize="11" FontWeight="SemiBold" Margin="0,8,0,3" Foreground="#666"/>
                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <Ellipse Width="10" Height="10" Fill="Blue" Stroke="White" StrokeThickness="1"/>
                    <TextBlock Text="Points d'intérêt" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
